{
  "compilerOptions": {

    "declaration": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",

    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,    

    "types": ["node"],
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}